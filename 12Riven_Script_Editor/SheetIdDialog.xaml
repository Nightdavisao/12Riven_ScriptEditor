<Window x:Class="Riven_Script_Editor.SheetIdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Riven_Script_Editor"
        mc:Ignorable="d"
        Title="SheetIdDialog"
        ResizeMode="NoResize"
        Height="150" Width="300" Background="#FF2B2B2B">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SheetIdTextBox" Margin="10,37,8,0" TextWrapping="NoWrap" VerticalAlignment="Top" Height="22"/>
        <Label Content="Insert the ID or URL of the Google spreadsheet" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="FetchButton" Content="Fetch" HorizontalAlignment="Right" Margin="0,75,80,0" VerticalAlignment="Top" Height="24" Width="65" Click="FetchButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,75,10,0" VerticalAlignment="Top" Height="24" Width="65" Click="CancelButton_Click"/>

    </Grid>
</Window>
